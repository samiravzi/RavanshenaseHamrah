<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent">

    <LinearLayout
        android:id="@+id/comment_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hope.commonsense.Views.TextViewWithFont
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/list_row_comment_title"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <com.hope.commonsense.Views.TextViewWithFont
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/list_row_comment_date"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <ir.noghteh.JustifiedTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/dark_gray2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_more"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/icon_more"
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:background="@drawable/btn_more"
            android:clickable="false"
            android:focusable="false"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/progressbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AAffffff">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="@dimen/activity_question_panel_icon_size"
            android:layout_height="@dimen/activity_question_panel_icon_size"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</RelativeLayout>